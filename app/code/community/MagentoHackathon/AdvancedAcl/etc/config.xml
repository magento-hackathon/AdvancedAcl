<?xml version="1.0"?>
<config>
    <modules>
        <MagentoHackathon_AdvancedAcl>
            <version>1.0.0</version>
        </MagentoHackathon_AdvancedAcl>
    </modules>
    <global>
        <models>
            <magentohackathon_advancedacl>
                <class>MagentoHackathon_AdvancedAcl_Model</class>
                <resourceModel>magentohackathon_advancedacl_resource</resourceModel>
            </magentohackathon_advancedacl>
            <magentohackathon_advancedacl_resource>
                <class>MagentoHackathon_AdvancedAcl_Model_Resource</class>
                <entities>
                    <role_store>
                        <table>admin_role_store</table>
                    </role_store>
                </entities>
            </magentohackathon_advancedacl_resource>
        </models>
        <helpers>
            <magentohackathon_advancedacl>
                <class>MagentoHackathon_AdvancedAcl_Helper</class>
            </magentohackathon_advancedacl>
        </helpers>
        <blocks>
            <magentohackathon_advancedacl>
                <class>MagentoHackathon_AdvancedAcl_Block</class>
            </magentohackathon_advancedacl>
            <adminhtml>
                <rewrite>
                    <store_switcher>MagentoHackathon_AdvancedAcl_Block_Adminhtml_Store_Switcher</store_switcher>
                    <system_config_switcher>MagentoHackathon_AdvancedAcl_Block_Adminhtml_System_Config_Switcher</system_config_switcher>
                </rewrite>
            </adminhtml>
        </blocks>
        <resources>
            <magentohackathon_advancedacl_setup>
                <setup>
                    <module>MagentoHackathon_AdvancedAcl</module>
                </setup>
            </magentohackathon_advancedacl_setup>
        </resources>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <MagentoHackathon_AdvancedAcl>
                    <files>
                        <magentohackathon_advancedacl>MagentoHackathon_AdvancedAcl.csv</magentohackathon_advancedacl>
                    </files>
                </MagentoHackathon_AdvancedAcl>
            </modules>
        </translate>
        <events>
            <admin_permissions_role_prepare_save>
                <observers>
                    <magentohackathon_advancedacl>
                        <type>singleton</type>
                        <class>magentohackathon_advancedacl/observer_role</class>
                        <method>addStoresToRoleModel</method>
                    </magentohackathon_advancedacl>
                </observers>
            </admin_permissions_role_prepare_save>
            <admin_roles_save_after>
                <observers>
                    <magentohackathon_advancedacl>
                        <type>singleton</type>
                        <class>magentohackathon_advancedacl/observer_role</class>
                        <method>saveAfter</method>
                    </magentohackathon_advancedacl>
                </observers>
            </admin_roles_save_after>
            <admin_roles_load_after>
                <observers>
                    <magentohackathon_advancedacl>
                        <type>singleton</type>
                        <class>magentohackathon_advancedacl/observer_role</class>
                        <method>afterLoad</method>
                    </magentohackathon_advancedacl>
                </observers>
            </admin_roles_load_after>
            <admin_roles_delete_before>
                <observers>
                    <magentohackathon_advancedacl>
                        <type>singleton</type>
                        <class>magentohackathon_advancedacl/observer_role</class>
                        <method>beforeDelete</method>
                    </magentohackathon_advancedacl>
                </observers>
            </admin_roles_delete_before>
            <core_block_abstract_prepare_layout_after>
                <observers>
                    <magentohackathon_advancedacl_core_block_abstract_prepare_layout_after>
                        <type>singleton</type>
                        <class>magentohackathon_advancedacl/observer_role</class>
                        <method>addTabToRoles</method>
                    </magentohackathon_advancedacl_core_block_abstract_prepare_layout_after>
                </observers>
            </core_block_abstract_prepare_layout_after>
            <sales_order_grid_collection_load_before>
                <observers>
                    <magentohackathon_sales_order_grid_collection_load_before>
                        <type>singleton</type>
                        <class>magentohackathon_advancedacl/observer_sales</class>
                        <method>filterOrderGrid</method>
                    </magentohackathon_sales_order_grid_collection_load_before>
                </observers>
            </sales_order_grid_collection_load_before>
            <sales_order_invoice_grid_collection_load_before>
                <observers>
                    <magentohackathon_sales_order_invoice_grid_collection_load_before>
                        <type>singleton</type>
                        <class>magentohackathon_advancedacl/observer_sales</class>
                        <method>filterInvoiceGrid</method>
                    </magentohackathon_sales_order_invoice_grid_collection_load_before>
                </observers>
            </sales_order_invoice_grid_collection_load_before>
            <sales_order_shipment_grid_collection_load_before>
                <observers>
                    <magentohackathon_sales_order_shipment_grid_collection>
                        <type>singleton</type>
                        <class>magentohackathon_advancedacl/observer_sales</class>
                        <method>filterShipmentsGrid</method>
                    </magentohackathon_sales_order_shipment_grid_collection>
                </observers>
            </sales_order_shipment_grid_collection_load_before>
            <sales_order_creditmemo_grid_collection_load_before>
                <observers>
                    <magentohackathon_sales_order_creditmemo_grid_collection>
                        <type>singleton</type>
                        <class>magentohackathon_advancedacl/observer_sales</class>
                        <method>filterCreditMemoGrid</method>
                    </magentohackathon_sales_order_creditmemo_grid_collection>
                </observers>
            </sales_order_creditmemo_grid_collection_load_before>
            <sales_recurring_profile_collection_load_before>
                <observers>
                    <magentohackathon_sales_order_creditmemo_grid_collection>
                        <type>singleton</type>
                        <class>magentohackathon_advancedacl/observer_sales</class>
                        <method>filterRecurringProfilesGrid</method>
                    </magentohackathon_sales_order_creditmemo_grid_collection>
                </observers>
            </sales_recurring_profile_collection_load_before>
            <core_collection_abstract_load_before>
                <observers>
                    <magentohackathon_core_collection_abstract_load_before>
                        <type>singleton</type>
                        <class>magentohackathon_advancedacl/observer_sales</class>
                        <method>filterAgreementsGrid</method>
                    </magentohackathon_core_collection_abstract_load_before>
                    <magentohackathon_catalog_url_rewrite_collection_load_before>
                        <type>singleton</type>
                        <class>magentohackathon_advancedacl/observer_catalog</class>
                        <method>filterUrlRewriteCollection</method>
                    </magentohackathon_catalog_url_rewrite_collection_load_before>
                    <magentohackathon_catalog_search_term_collection_load_before>
                        <type>singleton</type>
                        <class>magentohackathon_advancedacl/observer_catalog</class>
                        <method>filterSearchTermsGrid</method>
                    </magentohackathon_catalog_search_term_collection_load_before>
                    <magentohackathon_catalog_tag_collection_load_before>
                        <type>singleton</type>
                        <class>magentohackathon_advancedacl/observer_catalog</class>
                        <method>filterTagGrid</method>
                    </magentohackathon_catalog_tag_collection_load_before>
                </observers>
            </core_collection_abstract_load_before>
            <catalog_category_collection_load_before>
                <observers>
                    <magentohackathon_catalog_tag_collection_load_before>
                        <type>singleton</type>
                        <class>magentohackathon_advancedacl/observer_catalog</class>
                        <method>filterCategories</method>
                    </magentohackathon_catalog_tag_collection_load_before>
                </observers>
            </catalog_category_collection_load_before>
            <eav_collection_abstract_load_before>
                <observers>
                    <magentohackathon_catalog_product_collection_load_before>
                        <type>singleton</type>
                        <class>magentohackathon_advancedacl/observer_catalog</class>
                        <method>filterProductGrid</method>
                    </magentohackathon_catalog_product_collection_load_before>
                    <magentohackathon_customer_collection_load_before>
                        <type>singleton</type>
                        <class>magentohackathon_advancedacl/observer_customer</class>
                        <method>filterCustomerGrid</method>
                    </magentohackathon_customer_collection_load_before>
                </observers>
            </eav_collection_abstract_load_before>
            <controller_action_predispatch_adminhtml>
                <observers>
                    <magentohackathon_advancedacl>
                        <type>singleton</type>
                        <class>magentohackathon_advancedacl/observer_config</class>
                        <method>beforeLoad</method>
                    </magentohackathon_advancedacl>
                </observers>
            </controller_action_predispatch_adminhtml>
            <controller_action_predispatch_adminhtml_catalog_product_edit>
                <observers>
                    <magentohackathon_advancedacl>
                        <type>singleton</type>
                        <class>magentohackathon_advancedacl/observer_access</class>
                        <method>productEditAccessAllowed</method>
                    </magentohackathon_advancedacl>
                </observers>
            </controller_action_predispatch_adminhtml_catalog_product_edit>
            <!-- append store_id to url -->
            <controller_action_predispatch_adminhtml_catalog_product_edit>
                <observers>
                    <magentohackathon_advancedacl>
                        <type>singleton</type>
                        <class>magentohackathon_advancedacl/observer_url</class>
                        <method>catalogProductEdit</method>
                    </magentohackathon_advancedacl>
                </observers>
            </controller_action_predispatch_adminhtml_catalog_product_edit>
            <controller_action_predispatch_adminhtml_catalog_category_edit>
                <observers>
                    <magentohackathon_advancedacl>
                        <type>singleton</type>
                        <class>magentohackathon_advancedacl/observer_url</class>
                        <method>catalogCategoryEdit</method>
                    </magentohackathon_advancedacl>
                </observers>
            </controller_action_predispatch_adminhtml_catalog_category_edit>
            <controller_action_predispatch_adminhtml_cms_page_index>
                <observers>
                    <magentohackathon_advancedacl>
                        <type>singleton</type>
                        <class>magentohackathon_advancedacl/observer_url</class>
                        <method>cmsPageIndex</method>
                    </magentohackathon_advancedacl>
                </observers>
            </controller_action_predispatch_adminhtml_cms_page_index>
            <!-- // append store_id to url -->
        </events>
    </adminhtml>
    <phpunit>
        <suite>
            <modules>
                <MagentoHackathon_AdvancedAcl/>
            </modules>
        </suite>
    </phpunit>
</config>
